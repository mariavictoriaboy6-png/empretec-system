{
  "name": "empretec-system",
  "version": "1.0.0",
  "description": "Sistema de gest√£o Empretec",
  "main": "main.js",
  "author": "Maria Victoria",
  "scripts": {
    "start": "electron .",
    "package-win": "electron-builder --win"
  },
  "build": {
    "appId": "com.empretec.system",
    "productName": "Empretec System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.gitignore"
    ],
    "win": {
      "target": "nsis",
      "icon": "logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "logo.ico",
      "artifactName": "EmpretecSystemSetup.exe"
    }
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^24.13.3"
  }
}
